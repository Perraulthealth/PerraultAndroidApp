<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newPrescription"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SearchView
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:id="@+id/searchPatient"
        android:hint = "Search Patient by mobile"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/imageViewPharmacy"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />

    <EditText
        android:layout_margin="15dp"
        android:inputType="textPassword"
        android:hint = "Patient's name"
        android:id="@+id/patientname"
        app:layout_constraintTop_toBottomOf="@+id/searchPatient"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        />

    <Spinner
        android:layout_width="40dp"
        android:layout_height="48dp"
        tools:layout_editor_absoluteY="84dp"
        tools:layout_editor_absoluteX="8dp"
        android:id="@+id/spinner" />

</android.support.constraint.ConstraintLayout>