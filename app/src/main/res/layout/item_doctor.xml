<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_doctor"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id = "@+id/doctorphoto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <Button
        android:id="@+id/buttonDoctorCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/doctorphoto"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toRightOf="@+id/doctorphoto"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/experience"
        app:layout_constraintLeft_toRightOf="@+id/doctorphoto"
        app:layout_constraintTop_toBottomOf="@+id/name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/qualifications"
        app:layout_constraintLeft_toRightOf="@+id/doctorphoto"
        app:layout_constraintTop_toBottomOf="@+id/experience"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/specialities"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toRightOf="@+id/doctorphoto"
        app:layout_constraintTop_toBottomOf="@+id/qualifications"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clinicName"
        app:layout_constraintLeft_toRightOf="@+id/doctorphoto"
        app:layout_constraintTop_toBottomOf="@+id/specialities"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timings"
        app:layout_constraintLeft_toRightOf="@+id/doctorphoto"
        app:layout_constraintTop_toBottomOf="@+id/clinicName"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/area"
        app:layout_constraintLeft_toRightOf="@+id/doctorphoto"
        app:layout_constraintTop_toBottomOf="@+id/timings"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fee"
        app:layout_constraintLeft_toRightOf="@+id/doctorphoto"
        app:layout_constraintTop_toBottomOf="@+id/area"/>


</android.support.constraint.ConstraintLayout>