<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/header"
        android:layout_alignParentTop="true"
        android:background="#FC9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="My profile"
            android:textColor="#000"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="30dp"
            />
    </android.support.constraint.ConstraintLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="My profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewMyprofile"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/alert"
                app:layout_constraintTop_toBottomOf="@+id/textViewMyprofile"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintRight_toLeftOf="parent"
                android:layout_marginTop="5dp"
                android:id="@+id/imageButtonPhoto"
                />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewName"
                app:layout_constraintTop_toBottomOf="@+id/imageButtonPhoto"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintRight_toLeftOf="parent"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/textViewName"
                android:layout_marginTop="5dp"
                android:id="@+id/textViewDesignation"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintRight_toLeftOf="parent"
                />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:layout_constraintRight_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewDesignation"
                app:layout_constraintLeft_toRightOf="parent"
                android:id="@+id/textViewAddress"
                />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewAddress"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:id="@+id/textViewMynetwork" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                app:layout_constraintLeft_toRightOf="@+id/textViewMynetwork"
                app:layout_constraintTop_toBottomOf="@+id/textViewAddress"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/textViewViews" />

            <TextView
                android:text="TextView"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewMynetwork"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/textViewNetwork"
                android:layout_height="60dp"
                android:background="@android:color/holo_orange_light"
                android:layout_width="100dp" />

            <TextView
                android:text="TextView"
                android:layout_width="80dp"
                android:layout_height="60dp"
                app:layout_constraintLeft_toRightOf="@+id/textViewNetwork"
                app:layout_constraintTop_toBottomOf="@+id/textViewViews"
                app:layout_constraintRight_toLeftOf="@+id/textViewPosts"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/textViewProfile"
                android:background="@android:color/holo_orange_light" />

            <TextView
                android:text="TextView"
                android:layout_width="80dp"
                android:layout_height="60dp"
                app:layout_constraintLeft_toRightOf="@+id/textViewProfile"
                app:layout_constraintTop_toBottomOf="@+id/textViewViews"
                app:layout_constraintRight_toLeftOf="@+id/textViewShare"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/textViewPosts"
                android:background="@android:color/holo_orange_light" />

            <TextView
                android:text="TextView"
                android:layout_width="80dp"
                android:layout_height="60dp"
                app:layout_constraintLeft_toRightOf="@+id/textViewPosts"
                app:layout_constraintTop_toBottomOf="@+id/textViewViews"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:id="@+id/textViewShare"
                android:background="@android:color/holo_orange_light" />

            <TextView
                android:text="Contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewNetwork"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:id="@+id/textViewContact" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/stat_sys_phone_call"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewContact"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:id="@+id/imageViewPhone" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/imageViewPhone"
                app:layout_constraintTop_toBottomOf="@+id/textViewContact"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="10dp"
                android:id="@+id/textViewPhone" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_dialog_email"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewPhone"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:id="@+id/imageViewMail" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/imageViewMail"
                app:layout_constraintTop_toBottomOf="@+id/textViewPhone"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="10dp"
                android:id="@+id/textViewMail" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_menu_edit"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewShare"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:id="@+id/imageViewEdit" />

            <TextView
                android:text="Posts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewMail"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:id="@+id/textViewPost" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewPost"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:id="@+id/textViewFollowers" />

            <TextView
                android:text="TextView"
                android:layout_width="300dp"
                android:layout_height="40dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewFollowers"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:id="@+id/textViewDate" />

            <ImageButton
                android:layout_height="200dp"
                app:srcCompat="@drawable/alert"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewDate"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="10dp"
                android:id="@+id/imageButtonPost"
                android:layout_width="350dp" />

            <TextView
                android:text="TextView"
                android:layout_width="300dp"
                android:layout_height="40dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageButtonPost"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:id="@+id/textViewTitle" />

            <TextView
                android:text="TextView"
                android:layout_width="280dp"
                android:layout_height="30dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:id="@+id/textViewReply1" />

            <TextView
                android:text="TextView"
                android:layout_width="280dp"
                android:layout_height="30dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewReply1"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:id="@+id/textViewReply2" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:id="@+id/textViewDate1" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewDate1"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:id="@+id/textViewDate2" />

            <TextView
                android:text="Following"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewReply2"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:id="@+id/textViewFollowing" />

            <ImageButton
                android:layout_width="68dp"
                android:layout_height="64dp"
                app:srcCompat="@drawable/alert"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewFollowing"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:id="@+id/imageButtonFollow1" />

            <ImageButton
                android:layout_width="68dp"
                android:layout_height="64dp"
                app:srcCompat="@drawable/alert"
                app:layout_constraintLeft_toRightOf="@+id/imageButtonFollow1"
                app:layout_constraintTop_toBottomOf="@+id/textViewFollowing"
                app:layout_constraintRight_toLeftOf="@+id/imageButtonFollow3"
                android:layout_marginTop="10dp"
                android:id="@+id/imageButtonFollow2" />

            <ImageButton
                android:layout_width="68dp"
                android:layout_height="64dp"
                app:srcCompat="@drawable/alert"
                app:layout_constraintLeft_toRightOf="@+id/imageButtonFollow2"
                app:layout_constraintTop_toBottomOf="@+id/textViewFollowing"
                app:layout_constraintRight_toLeftOf="@+id/imageButtonFollow4"
                android:layout_marginTop="10dp"
                android:id="@+id/imageButtonFollow3" />

            <ImageButton
                android:layout_width="68dp"
                android:layout_height="64dp"
                app:srcCompat="@drawable/alert"
                app:layout_constraintTop_toBottomOf="@+id/textViewFollowing"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:id="@+id/imageButtonFollow4" />

            <Button
                android:text="Button"
                android:layout_width="350dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageButtonFollow1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="70dp"
                android:layout_marginTop="10dp"
                android:id="@+id/buttonMyactivity"
                android:layout_height="70dp"
                android:background="@android:color/holo_red_light"
                tools:text="My activity"
                android:textColor="@android:color/white" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>







</android.support.constraint.ConstraintLayout>