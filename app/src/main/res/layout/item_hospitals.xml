<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_doctor"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id = "@+id/hospitalphoto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toRightOf="@+id/hospitalphoto"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/specialities"
        app:layout_constraintLeft_toRightOf="@+id/hospitalphoto"
        app:layout_constraintTop_toBottomOf="@+id/name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberofDoctors"
        app:layout_constraintLeft_toRightOf="@+id/hospitalphoto"
        app:layout_constraintTop_toBottomOf="@+id/specialities"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toRightOf="@+id/hospitalphoto"
        app:layout_constraintTop_toBottomOf="@+id/numberofDoctors"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timings"
        app:layout_constraintLeft_toRightOf="@+id/doctorphoto"
        app:layout_constraintTop_toBottomOf="@+id/address"/>



</android.support.constraint.ConstraintLayout>